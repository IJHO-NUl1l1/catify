{
    "manifest_version": 3,
    "name": "Catify",
    "description": "Choose a cat image to set as a background for all the pages you visit",
    "version": "1.0",
    "icons": {
        "16": "images/16.png",
        "32": "images/32.png",
        "48": "images/48.png",
        "128": "images/128.png"
    },
    "action": {
        "default_icon": {
            "16": "images/16.png",
            "32": "images/32.png",
            "48": "images/48.png",
            "128": "images/128.png"
        },
        "default_title": "Catify",
        "default_popup": "popup/popup.html"
    },
    "permissions": [
        "activeTab",
        "storage",
        "scripting",
        "tabs"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*"],
            "exclude_matches": ["*://chrome.google.com/*", "*://chrome/*", "*://*/chrome/*"],
            "js": ["content.js"]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["images/*.png"],
            "matches": ["<all_urls>"]
        }
    ]
}